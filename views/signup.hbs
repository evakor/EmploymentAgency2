{{!< layout}} <div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <h6 class="mb-0 pb-3"><span>Employee </span><span>Employer</span></h6>
                    <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                    <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto">
                        <div class="card-3d-wrapper">
                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">Sign Up</h4>
                                        <!-- Employee -->
                                        <form>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="text" name="employee_firstname"
                                                        class="form-control mb-3" placeholder="First Name"
                                                        id="employee_firstname" autocomplete="off">
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="employee_lastname"
                                                        class="form-control mb-3" placeholder="Last Name"
                                                        id="employee_lastname" autocomplete="off">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="email" name="employee_email" class="form-control mb-3"
                                                        placeholder="Email" id="employee_email" autocomplete="off"
                                                        required>
                                                </div>
                                                <div class="col">
                                                    <input type="password" name="employee_password"
                                                        class="form-control mb-3" placeholder="Password"
                                                        id="employee_password" autocomplete="off" required>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <select id="regionDropdown" name="employee_region">
                                                        <option value="">Select Region</option>
                                                        {{#each regions as |region|}}
                                                        <option value="{{region}}">{{region}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="employee_address" class="form-control mb-3"
                                                        placeholder="Address" id="employee_address" autocomplete="off">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="number" name="employee_phone1"
                                                        class="form-control mb-3" placeholder="Phone 1"
                                                        id="employee_phone1" autocomplete="off" required>
                                                </div>
                                                <div class="col">
                                                    <input type="number" name="employee_phone2"
                                                        class="form-control mb-3" placeholder="Phone2"
                                                        id="employee_phone2" autocomplete="off">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <select id="occupationDropdown" name="employee_occupation"
                                                        onchange="updateSpecialties()" required>
                                                        <option value="">Select Occupation</option>
                                                        {{#each jobCategories.occupations}}
                                                        <option value="{{@index}}">{{this.name}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <select id="specialtyDropdown" name="employee_specialty">
                                                        <option value="">Select Specialty</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary btn-block  mb-3"
                                                    style="margin-top: 20px;">Sign Up</button>
                                            </div>
                                            <a href="/login" class="text-muted">Registered? Sign In!</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Employer -->
                            <div class="card-back">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">Sign Up</h4>
                                        <form>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="text" name="employer_firstname"
                                                        class="form-control mb-3" placeholder="First Name"
                                                        id="employer_firstname" autocomplete="off" required>
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="employer_lastname"
                                                        class="form-control mb-3" placeholder="Last Name"
                                                        id="employer_lastname" autocomplete="off" required>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="email" name="employer_email" class="form-control mb-3"
                                                        placeholder="Your Email" id="employer_email" autocomplete="off"
                                                        required>
                                                </div>
                                                <div class="col">
                                                    <input type="password" name="employer_password"
                                                        class="form-control mb-3" placeholder="Your Password"
                                                        id="employer_password" autocomplete="off" required>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <select id="regionDropdown" name="employer_region">
                                                        <option value="">Select Region</option>
                                                        {{#each regions as |region|}}
                                                        <option value="{{region}}">{{region}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="employer_address" class="form-control mb-3"
                                                        placeholder="Address" id="employer_address" autocomplete="off"
                                                        required>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="number" name="employer_phone1" class="form-control"
                                                        placeholder="Phone 1" id="employer_phone1" autocomplete="off"
                                                        required>
                                                </div>
                                                <div class="col">
                                                    <input type="number" name="employer_phone2"
                                                        class="form-control mb-3" placeholder="Phone2"
                                                        id="employer_phone2" autocomplete="off">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col">
                                                    <input type="text" name="employer_company_name"
                                                        class="form-control mb-3" placeholder="Company Name"
                                                        id="employer_company_name1" autocomplete="off" required>
                                                </div>
                                                <div class="col">
                                                    <input type="text" name="employer_company_desc"
                                                        class="form-control mb-3" placeholder="Company Description"
                                                        id="employer_company_desc" autocomplete="off" required>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary btn-block mb-3"
                                                    style="margin-top: 20px;">Sign Up</button>
                                            </div>

                                        </form>
                                        <a href="/login" class="text-muted">Registered? Sign In!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script>
        const occupationsData = {{{ json jobCategories }}};

        function updateSpecialties() {
            const occupationSelect = document.getElementById('occupationDropdown');
            const specialtySelect = document.getElementById('specialtyDropdown');
            const selectedOccupationIndex = occupationSelect.value;
            specialtySelect.innerHTML = '<option value="">Select Specialty</option>';

            if (selectedOccupationIndex !== "") {
                const specialties = occupationsData.occupations[selectedOccupationIndex].specialties;
                specialties.forEach(specialty => {
                    const option = document.createElement('option');
                    option.value = specialty;
                    option.textContent = specialty;
                    specialtySelect.appendChild(option);
                });
            }
        }
    </script>